function CalculatePerClassTextonrepResentation(pathTextonResponseData,class,centroids)
    addpath('/home/fuanka/Malik/storage/disk0/Other/code/lab_vision/lab6_textons/lib')
    
    D=dir(strcat(pathTextonResponseData,'/',class,'*.mat'));
    
    avgResponse=cell([32,3]);
    sizeAvgResponse=size(avgResponse)
    
    for i=1:sizeAvgResponse(1)
            for j=1:sizeAvgResponse(2)
                avgResponse{i,j}=doubzeros(480,640);
            end
    end
    
    
    for matIdx = 1:length(D)
        matIdx
        fullFilePath=strcat(pathTextonResponseData,'/',D(matIdx).name);
        fullFilePath
        textonReponseData =load(fullFilePath)
        
        for i=1:sizeAvgResponse(1)
            for j=1:sizeAvgResponse(2)
                avgResponse{i,j}=avgResponse{i,j}+textonReponseData.aResponse{i,j}
            end
        end
        verify=size(avgResponse)
        
       
        %[map,textons] = computeTextons(textonImage.aResponse,centroids);
    end

%     tmap = assignTextons(textonImage.aResponse,textons');
%     size(map)
%     size(textons)
%     size(tmap)
end

